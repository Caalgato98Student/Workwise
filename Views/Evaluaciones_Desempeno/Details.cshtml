@model Papeleria.Models.Evaluaciones_Desempeno

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de evaluacion</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Mes_Evaluacion)
        </dt>

        <dd>
            @Model.Mes_Evaluacion.Value.ToString("yyyy-MM-dd")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Calificacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Calificacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comentarios)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comentarios)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Empleados.Nombre)
        </dt>

        <dd>
            @Model.Empleados.Nombre @Model.Empleados.Apellido_Paterno
        </dd>

    </dl>
</div>

<div class="mt-3">
    <a href="@Url.Action("Edit", new { id = Model.ID_Evaluacion })" class="btn btn-warning" title="Editar"><i class="fas fa-edit"></i><span class="sr-only">Edit</span></a>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-primary" title="Regresar"><i class="fas fa-arrow-left"></i><span class="sr-only">Regresar</span></a>
</div>