@model Papeleria.Models.Evaluaciones_Desempeno

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar evaluación</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Evaluacion)

    <div class="form-group">
        @Html.LabelFor(model => model.ID_Empleado, "ID_Empleado", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ID_Empleado, (IEnumerable<SelectListItem>)ViewBag.ID_Empleado, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Empleado, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Mes_Evaluacion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Mes_Evaluacion, "{0:yyyy-MM-dd}", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Mes_Evaluacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Calificacion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Calificacion, (IEnumerable<SelectListItem>)ViewBag.Calificacion, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Calificacion, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Comentarios, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Comentarios, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-primary" title="Regresar"><i class="fas fa-arrow-left"></i><span class="sr-only">Regresar</span></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
